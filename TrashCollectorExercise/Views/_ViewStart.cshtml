

@{

    
    
    if (this.User.IsInRole("Customer"))
    {
        Layout = "~/Views/Shared/LayoutCustomer.cshtml";
    }
    else if (this.User.IsInRole("Employee"))
    {
        Layout = "~/Views/Shared/LayoutEmployee.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}
